<%- layout('./layout/wrapper') %>
<main>
    <div class="container py-5">
        <div class="bg-white shadow rounded p-4">
            <h1 class="h3 mb-4">Edit Product</h1>
            <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="productType" class="form-label">Product Type</label>
                    <input type="text" class="form-control" id="productType" name="productType" value="<%= product.productType %>" required>
                </div>
                <div class="mb-3">
                    <label for="model" class="form-label">Model</label>
                    <input type="text" class="form-control" id="model" name="model" value="<%= product.model %>" required>
                </div>
                <div class="mb-3">
                    <label for="variant" class="form-label">Variant</label>
                    <input type="text" class="form-control" id="variant" name="variant" value="<%= product.variant %>" required>
                </div>
                <div class="mb-3">
                    <label for="ram" class="form-label">RAM (GB)</label>
                    <input type="number" class="form-control" id="ram" name="ram" value="<%= product.ram %>" required>
                </div>
                <div class="mb-3">
                    <label for="storage" class="form-label">Storage (GB/TB)</label>
                    <input type="number" class="form-control" id="storage" name="storage" value="<%= product.storage %>" required>
                </div>
                <div class="mb-3">
                    <label for="specs" class="form-label">Specs (Comma separated)</label>
                    <input type="text" class="form-control" id="specs" name="specs" value="<%= product.specs.join(', ') %>" required>
                </div>
                <div class="mb-3">
                    <label for="modelYear" class="form-label">Model Year</label>
                    <input type="number" class="form-control" id="modelYear" name="modelYear" value="<%= product.modelYear %>" required>
                </div>
                <div class="mb-3">
                    <label for="chip" class="form-label">Chip</label>
                    <input type="text" class="form-control" id="chip" name="chip" value="<%= product.chip %>" required>
                </div>
                <div class="mb-3">
                    <label for="screenSize" class="form-label">Screen Size (inches)</label>
                    <input type="number" step="0.01" class="form-control" id="screenSize" name="screenSize" value="<%= product.screenSize %>" required>
                </div>
                <div class="mb-3">
                    <label for="mainImage" class="form-label">Main Image URL</label>
                    <input type="text" class="form-control" id="mainImage" name="mainImage" value="<%= product.mainImage %>" required>
                </div>
                <div class="mb-3">
                    <label for="additionalImages" class="form-label">Additional Images URLs (Comma separated)</label>
                    <input type="text" class="form-control" id="additionalImages" name="additionalImages" value="<%= product.additionalImages.join(', ') %>">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= product.price %>" required>
                </div>
                <button type="submit" class="btn btn-primary">Update Product</button>
            </form>
        </div>
    </div>
</main>
