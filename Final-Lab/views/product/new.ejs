<%- layout('./layout/wrapper') %>
<main>
    <div class="container py-5">
        <div class="bg-white shadow rounded p-4">
            <h1 class="h3 mb-4">Add New Product</h1>
            <form action="/products" method="POST">
                <div class="mb-3">
                    <label for="productType" class="form-label">Product Type</label>
                    <input type="text" class="form-control" id="productType" name="productType" required>
                </div>
                <div class="mb-3">
                    <label for="model" class="form-label">Model</label>
                    <input type="text" class="form-control" id="model" name="model" required>
                </div>
                <div class="mb-3">
                    <label for="variant" class="form-label">Variant</label>
                    <input type="text" class="form-control" id="variant" name="variant">
                </div>
                <div class="mb-3">
                    <label for="ram" class="form-label">RAM (GB)</label>
                    <input type="number" class="form-control" id="ram" name="ram" required>
                </div>
                <div class="mb-3">
                    <label for="storage" class="form-label">Storage (GB or TB)</label>
                    <input type="number" class="form-control" id="storage" name="storage" required>
                </div>
                <div class="mb-3">
                    <label for="specs" class="form-label">Specs</label>
                    <input type="text" class="form-control" id="specs" name="specs">
                    <small class="form-text text-muted">Enter specs separated by commas (e.g., "5G, OLED display, Touch Bar").</small>
                </div>
                <div class="mb-3">
                    <label for="modelYear" class="form-label">Model Year</label>
                    <input type="number" class="form-control" id="modelYear" name="modelYear">
                </div>
                <div class="mb-3">
                    <label for="chip" class="form-label">Chip</label>
                    <input type="text" class="form-control" id="chip" name="chip">
                </div>
                <div class="mb-3">
                    <label for="screenSize" class="form-label">Screen Size (inches)</label>
                    <input type="number" step="0.1" class="form-control" id="screenSize" name="screenSize">
                </div>
                <div class="mb-3">
                    <label for="mainImage" class="form-label">Main Image URL</label>
                    <input type="url" class="form-control" id="mainImage" name="mainImage" required>
                </div>
                <div class="mb-3">
                    <label for="image1" class="form-label">Additional Image 1 URL</label>
                    <input type="url" class="form-control" id="image1" name="image1">
                </div>
                <div class="mb-3">
                    <label for="image2" class="form-label">Additional Image 2 URL</label>
                    <input type="url" class="form-control" id="image2" name="image2">
                </div>
                <div class="mb-3">
                    <label for="image3" class="form-label">Additional Image 3 URL</label>
                    <input type="url" class="form-control" id="image3" name="image3">
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>
        </div>
    </div>
</main>
