<%- layout('./layout/wrapper') %>
<main>
    <div class="container py-5">
        <div class="bg-white shadow rounded p-4">
          <div class="row">
            <!-- Product Images -->
            <div class="col-md-6">
              <img src="<%= product.image %>" alt="Product Image" class="img-fluid rounded mb-3" style="width: 500px; height: 400px; object-fit: cover;" data-bs-toggle="modal" data-bs-target="#productModal" data-bs-slide-to="0">
              <div class="d-flex">
                <img src="<%= product.image %>" alt="Product Image 1" class="img-thumbnail me-2" style="width: 200px; height: 150px; object-fit: cover;" data-bs-toggle="modal" data-bs-target="#productModal" data-bs-slide-to="0">
                <img src="<%= product.image %>" alt="Product Image 2" class="img-thumbnail me-2" style="width: 200px; height: 150px; object-fit: cover;" data-bs-toggle="modal" data-bs-target="#productModal" data-bs-slide-to="1">
                <img src="<%= product.image %>" alt="Product Image 3" class="img-thumbnail" style="width: 200px; height: 150px; object-fit: cover;" data-bs-toggle="modal" data-bs-target="#productModal" data-bs-slide-to="2">
              </div>
            </div>
            <!-- Product Details -->
            <div class="col-md-6">
              <h1 class="h3"><%= product.model %></h1>
              <p class="text-muted">Variant: <%= product.variant %></p>
              <p class="text-muted">Specs: <%= product.specs.join(', ') %></p>
              <p class="text-muted">Chip: <%= product.chip %></p>
              <p class="text-muted">Year Release: <%= product.modelYear %></p>
              <p class="text-muted">Price: <%= product.price %></p>
              
              <div class="flex flex-col space-y-2">

                <button class="btn btn-primary">Add to Cart</button>

                <a href="/product/<%= product._id %>/edit" class="btn btn-secondary">Edit Product</a>

                <form action="/product/<%= product._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-primary px-72" type="submit">Delete Product</button>
                </form>
            </div>
            
              

            </div>
          </div>
        </div>
      </div>
    
    <!-- Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Product Images</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="<%= product.image %>" class="d-block w-100" alt="<%= product.model %> Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= product.image %>" class="d-block w-100" alt="<%= product.model %> Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= product.image %>" class="d-block w-100" alt="<%= product.model %> Image 3">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
